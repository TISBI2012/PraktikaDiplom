<Page x:Class="Praktika2012.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika2012.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Login"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="TBPassword"/>
            <TextBlock Text="Secret word"/>
            <TextBox x:Name="TBSecretWord"/>
            <Button x:Name="BLogin" Content="Login" Click="BLogin_Click"/>
            <Image x:Name="QRCodeImage" Width="100"/>
        </StackPanel>
    </Grid>
</Page>
